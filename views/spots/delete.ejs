<% layout('layouts/boilerplate') %>
<form action="/spots/<%= spot._id %>?_method=DELETE" method="POST" class="text-center">
    <p class="text-xl font-semibold mb-3">Are you sure you want to delete "<%= spot.title %>"?</p>
    <a href="/spots/<%= spot._id %>"><button type="button" class="px-3 py-2 mr-1 rounded bg-gray-300 hover:bg-gray-400">Cancel</button></a>
    <button type="submit" class="px-3 py-2 ml-1 rounded text-white bg-red-500 hover:bg-red-600">Delete</button>
</form>